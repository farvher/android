<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Adivinar">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="715dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="ADIVINAR NUMERO SECRETO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:textAlignment="center"
                android:textStyle="bold" android:textSize="18sp" android:textColor="@color/colorPrimary"/>
        <CheckBox
                android:text="Entre 1 y 50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox" android:checked="true"/>
        <CheckBox
                android:text="Entre 1 y 100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox2"/>
        <Button
                android:text="Generar NÃºmero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button3"
                android:background="@color/design_default_color_primary" android:onClick="generar"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:text="Intentos : 0"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText2"/>
        <Button
                android:text="Probar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button2" android:background="@color/colorAccent"
                android:onClick="probar"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>