<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="715dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"
    >
        <TextView
                android:text="PACIAL 1 ANDROID"
                android:layout_width="match_parent"
                android:layout_height="34dp" android:id="@+id/textView" android:textSize="18sp"
                android:textColor="@color/colorPrimary" android:textStyle="bold" android:textAlignment="center"/>
        <TextView
                android:text="Integrantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:textStyle="bold"
                android:textAlignment="center"/>
        <TextView
                android:text="Farith ernesto sanmiguel lopez 39494"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:textAlignment="center"/>
        <TextView
                android:text="Eliana puerto agudelo 45191"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:textAlignment="center"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp" android:id="@+id/textView5"
                android:background="@android:color/holo_orange_light"/>
        <Button
                android:text="Iniciar Juego"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button"
                android:textColor="@android:color/background_light" android:onClick="iniciarJuego"
                android:background="@color/design_default_color_primary"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>