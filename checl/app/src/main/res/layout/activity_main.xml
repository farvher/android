<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="712dp" tools:layout_editor_absoluteY="11dp" tools:layout_editor_absoluteX="8dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="0dp" android:id="@+id/editText"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                tools:layout_editor_absoluteY="68dp" tools:layout_editor_absoluteX="0dp" android:id="@+id/editText2"/>
        <CheckBox
                android:text="Sumar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="121dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/checkBox"/>
        <CheckBox
                android:text="Restar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="165dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/checkBox2"/>
        <Button
                android:text="Operar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="210dp"
                tools:layout_editor_absoluteX="8dp" android:id="@+id/button"/>
        <TextView
                android:text="Resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3" tools:layout_editor_absoluteY="11dp"
                tools:layout_editor_absoluteX="8dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>